@page "{id:int}"
@model HospitalManagementSystem.Pages.Doctors.DeleteModel

<h2 class="text-danger">Delete Doctor</h2>

<div class="alert alert-warning">
    Are you sure you want to delete <strong>@Model.Doctor.Name</strong>?
</div>

<form method="post">
    <input type="hidden" asp-for="Doctor.Id" />
    <button class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
