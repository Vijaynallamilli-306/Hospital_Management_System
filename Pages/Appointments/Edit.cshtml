@page "{id:int}"
@model HospitalManagementSystem.Pages.Appointments.EditModel

<h2 class="mb-3">Edit Appointment</h2>

<form method="post" class="card p-4 shadow bg-white">

    <input type="hidden" asp-for="Appointment.Id" />

    <div class="mb-3">
        <label class="form-label">Date & Time</label>
        <input asp-for="Appointment.AppointmentDate"
               type="datetime-local"
               class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Doctor</label>
        <input class="form-control"
               value="@Model.Appointment.Doctor.Name"
               disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Patient</label>
        <input class="form-control"
               value="@Model.Appointment.Patient.Name"
               disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Status</label>
        <select asp-for="Appointment.Status" class="form-select">
            <option value="Booked">Booked</option>
            <option value="Completed">Completed</option>
            <option value="Cancelled">Cancelled</option>
        </select>
    </div>

    <button class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>
