@page
@model HospitalManagementSystem.Pages.Patients.IndexModel

<h2 class="mb-3">Patients</h2>

<a asp-page="Create" class="btn btn-success mb-3">➕ Add Patient</a>

<table class="table table-striped table-bordered bg-white">
    <thead class="table-primary">
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Patients)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Age</td>
                <td>@p.Gender</td>
                <td>@p.Phone</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
