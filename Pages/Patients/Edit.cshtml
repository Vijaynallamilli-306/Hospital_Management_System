@page "{id:int}"
@model HospitalManagementSystem.Pages.Patients.EditModel

<h2>Edit Patient</h2>

<form method="post" class="card p-4 bg-white shadow-sm">
    <input type="hidden" asp-for="Patient.Id" />

    <input asp-for="Patient.Name" class="form-control mb-2" />
    <input asp-for="Patient.Age" class="form-control mb-2" />
    <input asp-for="Patient.Gender" class="form-control mb-2" />
    <input asp-for="Patient.Phone" class="form-control mb-2" />

    <button class="btn btn-primary">Update</button>
</form>
