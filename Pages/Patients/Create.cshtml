@page
@model HospitalManagementSystem.Pages.Patients.CreateModel

<h2>Add Patient</h2>

<form method="post" class="card p-4 shadow-sm bg-white">

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Patient.Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Age</label>
        <input asp-for="Patient.Age" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label class="form-label">Gender</label>
        <select asp-for="Patient.Gender" class="form-select">
            <option value="">Select</option>
            <option>Male</option>
            <option>Female</option>
            <option>Other</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input asp-for="Patient.Phone" class="form-control" />
    </div>

    <button class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>
